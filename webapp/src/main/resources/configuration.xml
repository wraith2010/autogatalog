<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="Console">
			<PatternLayout>
				<Pattern>"%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
				</Pattern>
			</PatternLayout>
		</Console>
		<File name="FileAppender" fileName="logs/app.log">
			<PatternLayout>
				<Pattern>"%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
				</Pattern>
			</PatternLayout>
		</File>
	</Appenders>
	<Loggers>
		<Logger name="com.ten31f.autogatalog.repository" level="trace"
			additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Root level="debug">
			<AppenderRef ref="Console" />
			<AppenderRef ref="FileAppender" />
		</Root>
	</Loggers>
</Configuration>